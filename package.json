{
  "name": "vuesplit",
  "displayName": "VueSplit",
  "description": "split a vue file into 3 editor window",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.vuesplit"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.vuesplit",
        "title": "Split a vue file into three"
      }
    ],
    "keybindings": [
      {
        "command": "extension.vuesplit",
        "key": "shift+ctrl+v",
        "mac": "shift+cmd+v"
      }
    ],
    "configuration": {
      "title": "Vue split",
      "properties": {
        "vuesplit.toggleSideBar": {
          "type": "boolean",
          "default": true,
          "description": "Should toggle the sidebar?"
        },
        "vuesplit.repeatCommandToClose": {
          "type": "boolean",
          "default": true,
          "description": "Repeat the vue.split command to close opened editor groups."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.2.0"
  }
}
